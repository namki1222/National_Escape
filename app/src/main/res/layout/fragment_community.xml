<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/point"
        android:gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/tab_toolbar" />
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/layout_tab1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="자유 게시판"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosanscjkkr_medium_cus"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/txt_tab1_line"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/point3"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_tab2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="보드판 갤러리"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosanscjkkr_medium_cus"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/txt_tab2_line"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/point3"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_tab3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="일행 구하기"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosanscjkkr_medium_cus"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/txt_tab3_line"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/point3"
                    android:visibility="invisible"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_tab4"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="방탈출 정보"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosanscjkkr_medium_cus"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/txt_tab4_line"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/point3"
                    android:visibility="invisible"/>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>